<%- model_class = Reservation -%>
<div class="row">
  <aside class="span3">
    <section>
      <h1><%= @reservation.room.name %></h1>
    </section>
    <section>
      <h4>
        <%= link_to 'Edit', edit_room_reservation_path(@room, @reservation) %> |
        <%= link_to 'Destroy', [@room, @reservation], method: :delete, data: { confirm: 'Are you sure?' } %> |
        <%= link_to 'Back', @room %>
      </h4>
    </section>
  </aside>
  <aside class="span9">
    <h1>Reservation Infos</h1>
     <section class='well'>
      <%= content_tag :h3, model_class.human_attribute_name(:owner) %>
      <%= content_tag :p, @reservation.owner.name  %>
      <%= content_tag :h3, model_class.human_attribute_name(:initial_date) %>
      <%= content_tag :p, @reservation.initial_date.to_formatted_s(:long) %>
      <%= content_tag :h3, model_class.human_attribute_name(:end_date) %>
      <%= content_tag :p, @reservation.end_date.to_formatted_s(:long) %>
      <%= content_tag :h3, model_class.human_attribute_name(:reason) %>
      <%= content_tag :p, @reservation.reason %>
      <%= content_tag :h3, 'Time' %>
      <%= content_tag :p, distance_of_time_in_words(@reservation.initial_date, @reservation.end_date) %>
     </section>
  </aside>
</div>

