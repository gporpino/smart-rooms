<h1>Listing reservations</h1>

<table class="table table-striped table-hover rooms">
  <thead>
    <tr>
      <th>Initial date</th>
      <th>End date</th>
      <th>Owner</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr data-link="<%= reservation_path(reservation) %>" class='table_row'>
        <td><%= reservation.initial_date.to_formatted_s(:short)   %></td>
        <td><%= reservation.end_date.to_formatted_s(:short)   %></td>
        <td><%= reservation.owner.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path, class: 'btn btn-primary' %>
