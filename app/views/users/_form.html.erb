<%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages', obj: f.object  %>

    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
    <%= f.submit %>

<% end %>
