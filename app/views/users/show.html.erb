<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.name %></h1>
      <h3><%= @user.email %></h3>
    </section>
    <section>
      <h4>
        <% if can? :manage, @user %>
          <%= link_to 'Edit', edit_user_path(@user) %> |
        <%end%>
        <%= link_to 'Back', :back %>
      </h4>
    </section>
  </aside>
  <% if can? :manage, @user %>
  <aside class="span8">
    <h1>My Rooms</h1>
    <%= render 'my_rooms', rooms: @myrooms %>
  </aside>
  <aside class="span8 offset4">
    <h1>Rooms i belongs</h1>
    <%= render 'rooms', rooms: @belongsrooms %>
  </aside>
  <%end%>
</div>
