<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Formulário contém <%= pluralize(obj.errors.count, "erro") %>.
    </div>
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
