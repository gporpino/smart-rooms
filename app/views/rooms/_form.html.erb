<%= form_for(@room) do |f| %>

  <%= render 'shared/error_messages', obj: f.object  %>

  <%= f.hidden_field :owner_id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :who_can_uses_this_room? %>
  
  <%= f.select :user_ids, 
    @associates.map { |u| [u.name, u.id] },
    { include_blank: true },
    { class: 'chosen-select', multiple: true }
  %>
  <hr>
  <%= f.submit 'Confirm', class: "btn btn-large btn-primary"%>

<% end %>
