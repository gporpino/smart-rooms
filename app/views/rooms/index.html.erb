<h1>Listing rooms</h1>

<%= will_paginate %>

<table class="table table-striped table-hover rooms">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Users</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr data-link="<%= room_path(room) %>" class='table_row'>
        <td><%= room.name %></td>
        <td><%= room.owner.name %></td>
        <td>
          <% room.users.each do |u| %>
            <%= u.name + " " %> <br/>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<%= link_to 'New Room', new_room_path, class: 'btn btn-primary'%>
