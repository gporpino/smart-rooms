<h1>Listing rooms</h1>

<table width='100%'>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th>Users</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.owner.name %></td>
        <td><%= room.name %></td>
        <td>
          <% room.users.each do |u| %>
            <%= u.name + " " %> <br/>
          <% end %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

